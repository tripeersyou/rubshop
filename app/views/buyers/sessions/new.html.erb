<div class="main-container" style="display: flex; width: 100%; height: 100vh;">
  
  
  <div class="left-card" style="width: 50%; background-color: #DF744A;">
    
     <div class="left-card-content" style="display: flex;" >
      <div class="" style="width: 200px; height: 200px; border-radius: 50%; background-color: orange; margin: 20% auto; text-align: center; line-height: 200px;">
        <p class="white-text">Trashy Cashy Oushy</p>
      </div>
    </div>
    
  </div>
  
  <div class="right-card" style="width: 50%; display: flex">
      
    
    <div class="right-card-content" style="margin: auto">
      
        <h3 style="margin-bottom: 15px;">Logo/Name</h3>
        
       <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, required: false %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
    
        <div class="form-actions">
          <%= f.button :submit, "Log in" %>
        </div>
      <% end %>
    
    <%= render "buyers/shared/links" %>
        
    </div>
     
    
    
  </div>

</div>